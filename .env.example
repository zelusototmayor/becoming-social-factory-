# ========================================
# Becoming Social Content Factory
# ========================================

# Database
DATABASE_URL=postgresql://becoming:becoming_secret@localhost:5432/becoming_social
POSTGRES_USER=becoming
POSTGRES_PASSWORD=becoming_secret
POSTGRES_DB=becoming_social

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# OpenAI (for AI quote generation and scene mapping)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o

# Runway ML (for AI video generation - viral videos)
# Get your API key from https://dev.runwayml.com
RUNWAY_API_KEY=your-runway-api-key

# ElevenLabs (for voice narration in viral videos)
# Get your API key from https://elevenlabs.io
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Instagram API
# Get these from Meta Developer Console
INSTAGRAM_ACCESS_TOKEN=your-long-lived-token
INSTAGRAM_USER_ID=your-instagram-user-id
INSTAGRAM_PAGE_ID=your-facebook-page-id

# Admin Dashboard
ADMIN_PASSWORD=your-secure-password
JWT_SECRET=random-string-at-least-32-chars

# Scheduling
TIMEZONE=Europe/Lisbon
DAILY_POST_COUNT=5
POST_WINDOW_START=09:00
POST_WINDOW_END=23:00

# Storage (optional - for S3)
# STORAGE_URL_BASE=https://your-bucket.s3.amazonaws.com/

# General
NODE_ENV=development
